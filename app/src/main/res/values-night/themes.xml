<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Peti" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="materialSwitchStyle">@style/CustomSwitchStyle</item>
    </style>

    <style name="Theme.Peti" parent="Base.Theme.Peti" />

    <style name="iconColor">
        <item name="tint">@color/white</item>
    </style>

    <style name="appNavigationBackgroundColor" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/black</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color_dark_mode</item>
    </style>

    <style name="backgroundColor">
        <item name="android:background">@color/black</item>
    </style>

    <style name="backgroundColorPink" parent="">
        <item name="android:backgroundTint">@color/buttonBackgrounColor</item>
    </style>

    <style name="buttonColor" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="secondaryButtonColor" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/red</item>
        <item name="strokeColor">@color/red</item>
    </style>

    <style name="imageButtonColor" >
        <item name="background">@drawable/round_button_background</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textColorGrey" >
        <item name="android:textColor">@color/solukTextYazisi</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="trackTint">@color/red</item>
        <item name="thumbTint">@color/white</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/red</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/radio_button_tint_dark_mode</item>
    </style>

</resources>